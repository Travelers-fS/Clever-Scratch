{
    "name": "Clever Scratch",
    "version": "0.1",
    "manifest_version": 2,
    "description": "Scratchを賢く",
    "permissions": ["declarativeContent", "storage"],
    "content_scripts": [{
        "matches": ["https://scratch.mit.edu/users/*"],
        "js": [
            "src/js/unread-count.js"
        ]},{
        "matches": [
            "https://scratch.mit.edu/projects/*",
            "https://scratch.mit.edu/projects/*/*"
        ],
        "js": [
            "src/js/comment-url.js"
        ],
        "css": [
            "src/css/copylink.css"
        ]}
    ]
}
